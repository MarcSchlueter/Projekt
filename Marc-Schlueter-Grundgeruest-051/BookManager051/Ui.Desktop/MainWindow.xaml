<Window x:Class="De.HsFlensburg.ClientApp051.Ui.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De.HsFlensburg.ClientApp051.Ui.Desktop"
        mc:Ignorable="d"
        Title="BookManager Test" Height="600" Width="1300">
    <Window.DataContext>
        <Binding Source="{StaticResource ViewModelLocator}"
                 Path="TheMainWindowViewModel"/>
    </Window.DataContext>

    <Window.Tag>
        <Binding Source="{StaticResource MessageListener}" 
                 Path="BindableProperty"/>
    </Window.Tag>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Margin="0,0,0,10">
            <Button Command="{Binding LoadDemoDataCommand}" 
                    Width="120" Height="30" Margin="5">
                Load Demo Data
            </Button>
            <Button Command="{Binding UploadBookCommand}" 
                    Width="120" Height="30" Margin="5"
                    Background="LightGreen">
                Upload Book
            </Button>
            <Button Command="{Binding AddRatingCommand}" 
                    Width="120" Height="30" Margin="5"
                    Background="LightBlue">
                Add Rating
            </Button>
            <Button Command="{Binding AddBookCommand}" 
                    Width="120" Height="30" Margin="5">
                Add Test Book
            </Button>
            <Button Command="{Binding AddUserCommand}" 
                    Width="120" Height="30" Margin="5">
                Add Test User
            </Button>
            <Button Command="{Binding BuildRankingCommand}" 
                    Width="120" Height="30" Margin="5">
                Build Ranking
            </Button>
            <Button Command="{Binding SaveCommand}" 
                    Width="120" Height="30" Margin="5">
                Save
            </Button>
            <Button Command="{Binding LoadCommand}" 
                    Width="120" Height="30" Margin="5">
                Load
            </Button>
        </WrapPanel>

        <GroupBox Grid.Row="1" Header="Books" Margin="0,0,0,5">
            <DataGrid Name="booksDataGrid"
                      ItemsSource="{Binding Books}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding Id}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Title" 
                                        Binding="{Binding Title}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Author" 
                                        Binding="{Binding Author}" 
                                        Width="150"/>
                    <DataGridTextColumn Header="Pages" 
                                        Binding="{Binding PageCount}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Category" 
                                        Binding="{Binding Category}" 
                                        Width="100"/>
                    <DataGridTextColumn Header="Avg Rating" 
                                        Binding="{Binding AverageRating}" 
                                        Width="100"/>
                    <DataGridCheckBoxColumn Header="Highlighted" 
                                            Binding="{Binding IsHighlighted}" 
                                            Width="100"/>
                    <DataGridTemplateColumn Header="Actions" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Download"
                                        Command="{Binding DataContext.DownloadBookCommand, 
                                                 RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Width="80"
                                        Height="25"
                                        Background="LightCyan"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Users" Margin="0,5,0,0">
            <DataGrid Name="usersDataGrid"
                      ItemsSource="{Binding Users}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding Id}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Username" 
                                        Binding="{Binding Username}" 
                                        Width="150"/>
                    <DataGridTextColumn Header="Display Name" 
                                        Binding="{Binding DisplayName}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Email" 
                                        Binding="{Binding Email}" 
                                        Width="200"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>