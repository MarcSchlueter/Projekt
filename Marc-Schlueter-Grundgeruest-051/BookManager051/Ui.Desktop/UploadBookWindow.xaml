<Window x:Class="De.HsFlensburg.ClientApp051.Ui.Desktop.UploadBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Upload Book" Height="650" Width="550"
        WindowStartupLocation="CenterOwner">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <Label Content="Uploader (User):" FontWeight="Bold"/>
                <ComboBox ItemsSource="{Binding AvailableUsers}"
                          SelectedItem="{Binding SelectedUser}"
                          DisplayMemberPath="DisplayName"
                          Height="30"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <Label Content="Titel:*" FontWeight="Bold"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <Label Content="Autor:*" FontWeight="Bold"/>
                <TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,10">
                <Label Content="Kategorie:*" FontWeight="Bold"/>
                <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0,0,0,10">
                <Label Content="Seitenzahl:*" FontWeight="Bold"/>
                <TextBox Text="{Binding PageCount, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0,0,0,10">
                <Label Content="Beschreibung:*" FontWeight="Bold"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Height="80"/>
            </StackPanel>

            <StackPanel Grid.Row="6" Margin="0,0,0,10">
                <Label Content="PDF-Datei:*" FontWeight="Bold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="{Binding FileName}"
                               VerticalAlignment="Center"
                               Padding="10,0,0,0"
                               Background="LightGray"
                               Height="30"
                               TextAlignment="Left"/>
                    <Button Grid.Column="1"
                            Content="Datei waehlen"
                            Command="{Binding SelectFileCommand}"
                            Width="120"
                            Height="30"
                            Margin="5,0,0,0"/>
                </Grid>
            </StackPanel>

            <TextBlock Grid.Row="7" 
                       Text="{Binding ValidationMessage}"
                       Foreground="Red"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,10,0,10"
                       TextWrapping="Wrap"
                       MinHeight="20"/>

            <Button Grid.Row="8" 
                    Content="Upload Book"
                    Command="{Binding SubmitCommand}"
                    Height="45"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="LightGreen"
                    Margin="0,10,0,10"/>

            <TextBlock Grid.Row="9"
                       Text="* Pflichtfelder"
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="0,10,0,10"/>
        </Grid>
    </ScrollViewer>
</Window>